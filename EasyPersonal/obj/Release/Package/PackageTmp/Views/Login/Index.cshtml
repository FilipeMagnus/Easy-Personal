@model EasyPersonal.Models.Treinadores
@{
    ViewBag.Title = "Index";
}
@if (ViewBag.Alerta != null)
{
    <script type="text/javascript">



        alert('@ViewBag.Alerta');



    </script>
}
@if (ViewBag.AlertaNecessitaLogin != null)
{
    <script type="text/javascript">



    alert('@ViewBag.AlertaNecessitaLogin');



    </script>
}
<center>
    <h2>Login</h2>
</center>
        @using (Html.BeginForm())
        {
            <br />
            <table width="400px"; align="center">
               
                <tr>
                    <td>
                        <h4 style="text-align:right; margin-right:7px">E-Mail:</h4>
                    </td>
                    <td>
                        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                         @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                    </td>
                </tr>
                
                    <td><br />
                        <h4 style="text-align:right; margin-right:7px">Senha:</h4>
                </td>
                <td><br />
                   @Html.EditorFor(model => model.senha, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.senha, "", new { @class = "text-danger" })
                </td>
                <tr>
                <tr>
                    <td align="center" colspan="2">
                        <p>
                            <br />
                            <input type="submit" value="Entrar" class="btn btn-default" />
                        </p>
                        
                            @Html.ActionLink("Cadastre-se", "cadastraTreinador", "Treinadores")

                    </td>
                </tr>
                <tr></tr>
                </table>
            
        }


