@model EasyPersonal.Models.ExerciciosTreinadores

@{
    ViewBag.Title = "deletarExercicio";
}

<h2>Deletar Exercício</h2>

<h3>Tem certeza que deseja deletar este exercício?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
     
        <dt>
            Nome
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nome)
        </dd>

        <dt>
            Grupo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.grupo)
        </dd>

        <dt>
            Equipamento
        </dt>

        <dd>
            @Html.DisplayFor(model => model.equipamento)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input style="margin-left:10%" type="submit" value="Deletar" class="btn btn-default" /> |
            @Html.ActionLink("Voltar", "listaExercicios")
        </div>
    }
</div>
