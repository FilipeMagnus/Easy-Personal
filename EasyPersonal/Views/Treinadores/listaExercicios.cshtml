@model IEnumerable<EasyPersonal.Models.ExerciciosTreinadores>

@{
    ViewBag.Title = "listaExercicios";
}


<h2>Lista de Exercícios</h2>

<p>
    @Html.ActionLink("Novo Exercício", "addExercicio")
</p>

@using (Html.BeginForm("listaExercicios", "Treinadores", FormMethod.Post))
{
    <div>
        <input type="text" class="form-control" placeholder="Busque o exercício" name="buscando" id="buscando">
    </div>

}

<br />

<table class="table">
    <tr>
        <th>
            Nome
        </th>
        <th>
            Grupo
        </th>
        <th>
            Equipamento
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.grupo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.equipamento)
        </td>
        <td>
            @Html.ActionLink("Editar", "editarExercicio", new { id = item.idExercicio }) |
            @Html.ActionLink("Deletar", "deletarExercicio", new { id = item.idExercicio })
        </td>
    </tr>
}

</table>
